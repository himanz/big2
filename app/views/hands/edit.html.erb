<h1 class="game-title">Edit Hand Score</h1>
<div class="input-group col-xs-10 col-sm-7 col-xs-offset-4 col-sm-offset-5">
	<%= button_to "Delete Hand", game_hand_path(@game, @hand), method: :delete, class: "btn btn-danger btn-small", confirm: "Do you want to delete this hand?" %>
</div>
<%= render 'form' %>
<div class="input-group col-xs-10 col-sm-7 col-xs-offset-4 col-sm-offset-5">
  <%= button_to "Cancel", @game, method: :get, class: "btn btn-warning btn-lg" %>
</div>